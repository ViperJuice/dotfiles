scrollback_lines 50000
auto_layout false

// Use OSC 52 to copy to local clipboard over SSH
copy_clipboard "system"
copy_on_select true

keybinds {
    // Cycle through stacked panes (useful for agent transcripts)
    normal {
        bind "Alt n" { FocusNextPane; }
        bind "Alt p" { FocusPreviousPane; }
    }

    // Unbind Ctrl+c from zellij so it passes through to terminal
    scroll {
        unbind "Ctrl c"
    }
    search {
        unbind "Ctrl c"
    }
    entersearch {
        unbind "Ctrl c"
    }
    renametab {
        unbind "Ctrl c"
    }
    renamepane {
        unbind "Ctrl c"
    }
}
